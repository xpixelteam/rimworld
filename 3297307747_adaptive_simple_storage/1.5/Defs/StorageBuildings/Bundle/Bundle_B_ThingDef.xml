<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="AdaptiveStorageBase">
        <defName>BundleB</defName>
        <label>Bundle B</label>
        <graphicData>
            <texPath>Bundle/Bundle_B</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(2.3,2.3)</drawSize>
            <drawRotated>false</drawRotated>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
        <description>A pile of fabric bundles that can store a range of items underneath. Items stored inside will never deteriorate and don't affect the beauty of their surroundings.\n\nTotal Capacity: 48\n\nRotate to change appearance.</description>
        <researchPrerequisites>
            <li>ComplexClothing</li>
        </researchPrerequisites>
        <fillPercent>0.2</fillPercent>
        <uiIconPath>Bundle/Bundle_B_UI</uiIconPath>
        <uiIconScale>1</uiIconScale>
        <size>(2,2)</size>
        <rotatable>true</rotatable>
        <defaultPlacingRot>South</defaultPlacingRot>
        <statBases>
            <MaxHitPoints>40</MaxHitPoints>
            <WorkToBuild>500</WorkToBuild>
            <Flammability>1</Flammability>
            <Beauty>0.7</Beauty>
            <Mass>2</Mass>
        </statBases>
        <costList>
			<Cloth>15</Cloth>
		</costList>
        <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
        <building>
            <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
            <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
            <maxItemsInCell>10</maxItemsInCell>
            <fixedStorageSettings>
                <filter>
                    <categories>
                        <li>Root</li>
                    </categories>
                </filter>
            </fixedStorageSettings>
            <paintable>true</paintable>
        </building>
        <minifiedDef>MinifiedThing</minifiedDef>
        <thingCategories>
            <li>BuildingsFurniture</li>
        </thingCategories>
    </ThingDef>
</Defs>
