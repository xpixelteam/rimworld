			</shadowData>
		</graphicData>
		<size>(3,3)</size>
		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
		</statBases>
		<costList>
			<Steel>100</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
