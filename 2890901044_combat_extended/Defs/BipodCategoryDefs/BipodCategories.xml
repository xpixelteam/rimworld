<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<CombatExtended.BipodCategoryDef>
		<defName>bipodRifle</defName>		<!-- Same as in other defs -->
		<label>Rifle</label>		<!-- Same as in other defs -->
		<bipod_id>Bipod_Rifle</bipod_id>		<!-- The tag that is required for this bipod -->
		<ad_Range>3</ad_Range>		<!-- Additional range with bipod set up -->
		<setuptime>150</setuptime>		<!-- Ticks to set up -->
		<recoil_mult_setup>0.8</recoil_mult_setup>		<!-- Recoil mult with bipod set up-->
		<recoil_mult_NOT_setup>1</recoil_mult_NOT_setup>		<!-- Recoil mult without the bipod set up -->
		<warmup_mult_setup>0.85</warmup_mult_setup>		<!-- Warmup mult with the bipod set up -->
		<warmup_mult_NOT_setup>1</warmup_mult_NOT_setup>		<!-- Warmup mult without the bipod set up -->
		<logColor>(0, 0, 255)</logColor>		<!-- When not specified just goes with blue, I just like making colorful logs tbh -->
		<swayMult>0.75</swayMult>		<!-- Sway mult with the bipod set up -->
		<swayPenalty>1</swayPenalty>		<!-- Sway mult without the bipod set up -->
		<!-- <autosetMode>AimedShot</autosetMode> -->		<!-- Automatically set up in this aim mode when the option is enabled -->
		<useAutoSetMode>false</useAutoSetMode>
	</CombatExtended.BipodCategoryDef>

