<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--========= Stuffable =========-->

	<!--Starter-->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_SUniform"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Nr_SUniform"]/statBases/ArmorRating_Blunt</xpath>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Nr_SUniform"]/statBases/ArmorRating_Heat</xpath>
	</Operation>

	<!--Cat Jacket-->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="Nr_CatJacket"
			]/statBases/Mass </xpath>
		<value>
			<Mass>12.5</Mass>
			<Bulk>20</Bulk>
			<WornBulk>8</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_CatJacket"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>12</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_CatJacket"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>4</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_CatJacket"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>6</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_CatJacket"]/stuffCategories</xpath>
		<value>
			<stuffCategories>
				<li>SoftArmor</li>
			</stuffCategories>
			<costList>
				<Steel>90</Steel>
			</costList>
		</value>
	</Operation>

	<!--Cat Hoodie-->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Nr_CatHoodie"]/statBases</xpath>
		<value>
			<Bulk>10</Bulk>
			<WornBulk>1</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_CatHoodie"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Nr_CatHoodie"]/statBases/ArmorRating_Sharp</xpath>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Nr_CatHoodie"]/statBases/ArmorRating_Blunt</xpath>
	</Operation>

	<!--========= Fixed Armor Value =========-->

	<!--Maid-->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Nr_CatMaid"]/statBases</xpath>
		<value>
			<Bulk>5</Bulk>
			<WornBulk>0</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_CatMaid"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_CatMaid"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Nr_CatMaidBand"]/statBases</xpath>
		<value>
			<Bulk>0.5</Bulk>
			<WornBulk>0</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_CatMaidBand"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_CatMaidBand"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
		</value>
	</Operation>

	<!--Power Armor-->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Nr_PowerArmor"]/statBases</xpath>
		<value>
			<Bulk>80</Bulk>
			<WornBulk>10</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_PowerArmor"]/statBases/Mass</xpath>
		<value>
			<Mass>30</Mass>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_PowerArmor"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>20</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_PowerArmor"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>45</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Nr_PowerArmor"]/statBases/Flammability</xpath>
		<value>
			<Flammability>0</Flammability>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Nr_PowerArmor"]/equippedStatOffsets</xpath>
		<value>
			<CarryWeight>35</CarryWeight>
			<CarryBulk>10</CarryBulk>
			<ToxicEnvironmentResistance>0.50</ToxicEnvironmentResistance>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Nr_PowerArmor"]/apparel/bodyPartGroups</xpath>
		<value>
			<li>Hands</li>
			<li>Feet</li>
		</value>
	</Operation>
</Patch>