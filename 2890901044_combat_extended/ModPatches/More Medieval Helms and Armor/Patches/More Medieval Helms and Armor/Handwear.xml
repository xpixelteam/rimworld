<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- ========== Work Glove =========== -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Domi_WorkGloves"]/statBases</xpath>
		<value>
			<Bulk>1.5</Bulk>
			<WornBulk>0</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Domi_WorkGloves"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<!-- ========== Light Gauntlets =========== -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Domi_LightGauntlets"]/statBases</xpath>
		<value>
			<Bulk>3</Bulk>
			<WornBulk>1</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Domi_LightGauntlets"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>1.25</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<!-- ========== Mitten Gauntlets =========== -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Domi_MittenGauntlets"]/statBases</xpath>
		<value>
			<Bulk>5</Bulk>
			<WornBulk>1</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Domi_MittenGauntlets"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>1.75</StuffEffectMultiplierArmor>
		</value>
	</Operation>

</Patch>