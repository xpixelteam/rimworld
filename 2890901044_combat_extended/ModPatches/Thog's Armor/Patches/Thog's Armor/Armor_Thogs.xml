	<!-- === Flak Shoulderpads === -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="ThogsArmor_FlakShoulderpads"]/statBases</xpath>
		<value>
			<Bulk>3</Bulk>
			<WornBulk>2</WornBulk>
		</value>
	</Operation>

