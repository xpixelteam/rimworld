<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Vikings -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="VFEV_Raider"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>4</min>
					<max>8</max>
				</primaryMagazineCount>
				<forcedSidearm>
					<sidearmMoney>
						<min>150</min>
						<max>350</max>
					</sidearmMoney>
					<weaponTags>
						<li>VikingMeleeBasic</li>
					</weaponTags>
				</forcedSidearm>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="VFEV_Archer"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>10</min>
					<max>28</max>
				</primaryMagazineCount>
				<forcedSidearm>
					<sidearmMoney>
						<min>150</min>
						<max>350</max>
					</sidearmMoney>
					<weaponTags>
						<li>VikingMeleeBasic</li>
					</weaponTags>
				</forcedSidearm>
			</li>
		</value>
	</Operation>

	<!-- Special -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="VFEV_VikingLegend"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>6</min>
					<max>10</max>
				</primaryMagazineCount>
			</li>
		</value>
	</Operation>
</Patch>