<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--Std Armor, 1/3 protection of devilstrand flak-->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Polarisbloc_CygnusStandardArmor"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>1.35</ArmorRating_Sharp>
