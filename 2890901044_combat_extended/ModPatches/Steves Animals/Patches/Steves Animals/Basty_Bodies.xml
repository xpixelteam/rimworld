<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Natural Armor -->
	<!-- Bast_Critter -->

	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="Bast_Critter"]//*[
			def="Body" or
			def="Leg" or
			def="Neck"]
		</xpath>
		<value>
			<groups/>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="Bast_Critter"]//*[
			def="Body" or
			def="Neck" or
			def="AnimalJaw" or
			def="Leg" or
			def="Foot" or
			def="Head"]/groups
		</xpath>
		<value>
			<li>CoveredByNaturalArmor</li>
		</value>
	</Operation>

