<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Cloak -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="O21_DNI_ShoulderCloak"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>6</StuffEffectMultiplierArmor>
			<Bulk>3.5</Bulk>
			<WornBulk>1.5</WornBulk>
		</value>
	</Operation>

	<!-- Tunic & Surcoat-->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="O21_DNI_TunicKnight" or defName="O21_DNI_KnightSurcoat"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
			<Bulk>3.5</Bulk>
			<WornBulk>1.5</WornBulk>
		</value>
	</Operation>

	<!-- Light Leather -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="O21_DNI_LeatherLight"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>6</StuffEffectMultiplierArmor>
			<Bulk>75</Bulk>
			<WornBulk>8</WornBulk>
		</value>
	</Operation>

	<!-- Pauldrons -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="O21_DNI_PauldronsKnight" or defName="O21_DNI_PauldronsGondorian"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>1.3</StuffEffectMultiplierArmor>
			<Bulk>5</Bulk>
			<WornBulk>2</WornBulk>
		</value>
	</Operation>

	<!-- Breastplate -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="O21_DNI_BreastplateKnight" or defName="O21_DNI_CuirassGondorian"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
			<Bulk>90</Bulk>
			<WornBulk>9</WornBulk>
		</value>
	</Operation>

	<!-- Helmet -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="O21_DNI_HelmetKnight" or defName="O21_DNI_HelmetGondor"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>2.1</StuffEffectMultiplierArmor>
			<Bulk>5</Bulk>
		</value>
	</Operation>

	<!-- Tropical Mask -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="DNIZoraiMaskBase"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>10</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<!-- Hood -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="O21_DNI_NausicHoodGoggled" or defName="O21_DNI_NausicGasmask"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>8</StuffEffectMultiplierArmor>
		</value>
	</Operation>

	<!-- Armored Hood -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="O21_DNI_NausicHoodGoggled_Armoured" or defName="O21_DNI_NausicGasmask_Armoured"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<StuffEffectMultiplierArmor>8</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>1</ArmorRating_Sharp>
		</value>
	</Operation>

	<!-- Gas Mask -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="O21_DNI_NausicGasmask" or defName="O21_DNI_NausicGasmask_Armoured"]/equippedStatOffsets</xpath>
		<value>
			<SmokeSensitivity>-0.65</SmokeSensitivity>
		</value>
	</Operation>
</Patch>