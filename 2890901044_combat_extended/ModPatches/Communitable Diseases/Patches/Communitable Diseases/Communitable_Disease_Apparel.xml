		<value>
			<layers>
				<li>Overhead</li>
			</layers>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_Respirator"]/apparel/bodyPartGroups</xpath>
		<value>
			<bodyPartGroups>
				<li>Teeth</li>
			</bodyPartGroups>
		</value>
	</Operation>
</Patch>