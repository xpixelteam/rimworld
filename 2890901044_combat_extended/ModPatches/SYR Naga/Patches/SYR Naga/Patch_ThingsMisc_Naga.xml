		<xpath>Defs/HediffDef[defName="BionicNagaTail"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>bionic naga tail</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>20</power>
					<cooldownTime>2.64</cooldownTime>
