	<ThingDef ParentName="BaseGrenadeProjectile">
		<defName>RD_Proj_RGD5Grenade</defName>
		<label>RG5 grenade (HE)</label>
		<graphicData>
			<texPath>Things/Projectile/RGD</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<explosionRadius>1.5</explosionRadius>
			<damageDef>Bomb</damageDef>
			<damageAmountBase>40</damageAmountBase>
			<explosionDelay>60</explosionDelay>
			<dropsCasings>true</dropsCasings>
			<casingMoteDefname>Fleck_GrenadePin</casingMoteDefname>
			<casingFilthDefname>Filth_GrenadeAmmoCasings</casingFilthDefname>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			<speed>10</speed>
			<suppressionFactor>3.0</suppressionFactor>
			<dangerFactor>2.0</dangerFactor>
			<airborneSuppressionFactor>0.25</airborneSuppressionFactor>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Small>30</Fragment_Small>
				</fragments>
			</li>
		</comps>
	</ThingDef>

