			defName="Gun_ASVal" or
			defName="Gun_VssVintz" or
			defName="Gun_Dragunov"
			]/tools </xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>stock</label>
					<capacities>
