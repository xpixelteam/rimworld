	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="Gun_Ak47Normal" or
			defName="Gun_Ak74Normal" or
			defName="Gun_AkM" or
			defName="Gun_SKS" or
			defName="Gun_Ak74U" or
