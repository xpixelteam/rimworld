<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--========= Stuffable =========-->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Tops_a" or
			defName="HAR_SA_Tops_b" or
			defName="HAR_SA_Tops_c"
			]/statBases/StuffEffectMultiplierArmor </xpath>
		<value>
			<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
			<Bulk>1</Bulk>
			<WornBulk>0</WornBulk>
		</value>
	</Operation>

	<!--Middle PA-->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Armor_a"
			]/statBases/ArmorRating_Sharp </xpath>
		<value>
			<ArmorRating_Sharp>16</ArmorRating_Sharp>
			<Bulk>80</Bulk>
			<WornBulk>10</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Armor_a"
			]/statBases/ArmorRating_Blunt </xpath>
		<value>
			<ArmorRating_Blunt>40</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Armor_a"
			]/statBases/Mass </xpath>
		<value>
			<Mass>60</Mass>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Armor_a"
			]/equippedStatOffsets/MoveSpeed </xpath>
		<value>
			<CarryWeight>80</CarryWeight>
			<CarryBulk>10</CarryBulk>
			<ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
			<ToxicEnvironmentResistance>0.50</ToxicEnvironmentResistance>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="HAR_SA_Armor_Base"]/apparel/bodyPartGroups</xpath>
		<value>
			<li>Hands</li>
			<li>Feet</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="HAR_SA_Armor_Base"]/costList/ComponentSpacer</xpath>
		<value>
			<ComponentSpacer>3</ComponentSpacer>
			<DevilstrandCloth>50</DevilstrandCloth>
		</value>
	</Operation>

	<!--Shell-->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Shell_a" or
			defName="HAR_SA_Shell_b"
			]/statBases/StuffEffectMultiplierArmor </xpath>
		<value>
			<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
			<Bulk>10</Bulk>
			<WornBulk>5</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Shell_c"
			]/statBases/ArmorRating_Sharp </xpath>
		<value>
			<ArmorRating_Sharp>10</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Shell_c"
			]/statBases/ArmorRating_Blunt </xpath>
		<value>
			<ArmorRating_Blunt>10</ArmorRating_Blunt>
		</value>
	</Operation>

	<!--Overhead-->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Heads_a" or
			defName="HAR_SA_Heads_b" or
			defName="HAR_SA_Heads_c"
			]/statBases/StuffEffectMultiplierArmor </xpath>
		<value>
			<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
			<Bulk>1</Bulk>
			<WornBulk>1</WornBulk>
		</value>
	</Operation>

	<!--Overhead Armor-->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Heads_d"
			]/statBases/ArmorRating_Sharp </xpath>
		<value>
			<ArmorRating_Sharp>18</ArmorRating_Sharp>
			<Bulk>5</Bulk>
			<WornBulk>1</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Heads_d"
			]/statBases/ArmorRating_Blunt </xpath>
		<value>
			<ArmorRating_Blunt>40.5</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="HAR_SA_Heads_d"
			]/equippedStatOffsets/MoveSpeed </xpath>
		<value>
			<AimingAccuracy>0.15</AimingAccuracy>
			<ToxicEnvironmentResistance>0.50</ToxicEnvironmentResistance>
			<SmokeSensitivity>-1</SmokeSensitivity>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="HAR_SA_Heads_d"]/costList</xpath>
		<value>
			<DevilstrandCloth>20</DevilstrandCloth>
		</value>
	</Operation>
</Patch>