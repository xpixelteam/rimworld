<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- ==== Bionic Modules  ==== -->
	<!-- MSE_BionicArmModule -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="MSE_BionicArmModule"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>fist</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>3</power>
					<cooldownTime>1.66</cooldownTime>
					<armorPenetrationBlunt>0.75</armorPenetrationBlunt>
				</li>
			</tools>
		</value>
	</Operation>
