<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- ====== Mammoth Tusk ====== -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="MammothTusk"]/description</xpath>
		<value>
			<description>A mammoth's tusk. Very durable and valuable. Too unwieldy to be used as a weapon.</description>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="MammothTusk"]/tools</xpath>
	</Operation>

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="MammothTusk"]</xpath>
		<attribute>ParentName</attribute>
		<value>ResourceBase</value>
	</Operation>

