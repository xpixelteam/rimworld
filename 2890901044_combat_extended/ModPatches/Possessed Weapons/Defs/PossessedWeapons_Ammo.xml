	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_DragonFireArrow</defName>
		<label>great arrows</label>
		<ammoTypes>
			<Ammo_GreatArrow_Stone>Projectile_DragonFireArrow</Ammo_GreatArrow_Stone>
