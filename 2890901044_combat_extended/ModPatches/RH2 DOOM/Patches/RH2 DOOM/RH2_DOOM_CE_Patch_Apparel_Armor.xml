<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- ========== Praetor Suit ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="RHApparel_PraetorSuit_PowerArmor"]/statBases</xpath>
		<value>
			<Bulk>100</Bulk>
			<WornBulk>15</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="RHApparel_PraetorSuit_PowerArmor"]/equippedStatOffsets</xpath>
		<value>
			<CarryBulk>40</CarryBulk>
			<CarryWeight>90</CarryWeight>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RHApparel_PraetorSuit_PowerArmor"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>20</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RHApparel_PraetorSuit_PowerArmor"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>40</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RHApparel_PraetorSuit_PowerArmor"]/statBases/ArmorRating_Heat</xpath>
		<value>
			<ArmorRating_Heat>1.0</ArmorRating_Heat>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="RHApparel_PraetorSuit_PowerArmor"]/statBases</xpath>
		<value>
			<ArmorRating_Electric>0.975</ArmorRating_Electric>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="RHApparel_PraetorSuit_PowerArmor"]/apparel/bodyPartGroups</xpath>
		<value>
			<li>Hands</li>
			<li>Feet</li>
		</value>
	</Operation>
</Patch>