	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[
			defName="RNApparel_Beret" or
			defName="RNApparel_BeretSOG"
			]/statBases </xpath>
		<value>
			<Bulk>1</Bulk>
			<WornBulk>1</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="RNApparel_Beret" or
