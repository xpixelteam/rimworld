<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--Arm Groups-->

	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="HAR_Neclose_Body"]//*[
			customLabel="left shoulder"
			]/groups
		</xpath>
		<value>
			<li>LeftShoulder</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="HAR_Neclose_Body"]//*[
			customLabel="right shoulder"
			]/groups
		</xpath>
		<value>
			<li>RightShoulder</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="HAR_Neclose_Body"]//*[
			customLabel="left arm"
			]/groups
		</xpath>
		<value>
			<li>LeftArm</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="HAR_Neclose_Body"]//*[
			customLabel="right arm"
			]/groups
		</xpath>
		<value>
			<li>RightArm</li>
		</value>
	</Operation>

	<!--Natural Armor-->

	<Operation Class="PatchOperationAdd">
		<xpath>
			Defs/BodyDef[defName="HAR_Neclose_Body"]//*[
			def="Torso" or
			def="Neclose_Wing" or
			def="Neck" or
			def="Head" or
			def="Nose" or
			def="Jaw" or
			def="Neclose_Horn" or
			def="Shoulder" or
			def="Arm" or
			def="Hand" or
			def="Finger" or
			def="Leg" or
			def="Foot"
			]/groups
		</xpath>
		<value>
			<li>CoveredByNaturalArmor</li>
		</value>
	</Operation>
</Patch>