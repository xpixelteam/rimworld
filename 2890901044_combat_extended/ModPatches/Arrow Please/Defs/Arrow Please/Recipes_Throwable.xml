<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- == Recipes == -->

	<RecipeDef ParentName="AmmoRecipeNeolithicBase">
		<defName>Make_Ranged_Tomahawk_CE</defName>
		<label>make tomahawk x10</label>
		<description>Craft 10 tomahawks.</description>
		<jobString>Making tomahawk.</jobString>
		<workAmount>8500</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<stuffCategoriesToAllow>
						<li>Metallic</li>
						<li>Stony</li>
					</stuffCategoriesToAllow>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
			</thingDefs>
			<stuffCategoriesToAllow>
				<li>Metallic</li>
				<li>Stony</li>
			</stuffCategoriesToAllow>
		</fixedIngredientFilter>
		<products>
			<Ranged_Tomahawk>10</Ranged_Tomahawk>
		</products>
		<recipeUsers>
			<li>FueledSmithy</li>
			<li>ElectricSmithy</li>
			<li>CraftingSpot</li>
		</recipeUsers>
	</RecipeDef>

	<RecipeDef ParentName="AmmoRecipeNeolithicBase">
