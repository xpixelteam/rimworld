<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- ========== Civilians ========== -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[@Name="WolvxCivBase"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>2</min>
					<max>4</max>
				</primaryMagazineCount>
			</li>
		</value>
	</Operation>

