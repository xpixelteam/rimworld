				<primaryMagazineCount>
					<min>3</min>
					<max>5</max>
				</primaryMagazineCount>
				<shieldMoney>
					<min>500</min>
					<max>1400</max>
				</shieldMoney>
				<shieldTags>
					<li>OutlanderShield</li>
				</shieldTags>
				<shieldChance>0.2</shieldChance>
				<sidearms>
					<li>
						<generateChance>0.5</generateChance>
						<sidearmMoney>
							<min>100</min>
							<max>300</max>
						</sidearmMoney>
						<weaponTags>
							<li>CE_Sidearm_Melee</li>
						</weaponTags>
					</li>
				</sidearms>
			</li>
		</value>
	</Operation>

