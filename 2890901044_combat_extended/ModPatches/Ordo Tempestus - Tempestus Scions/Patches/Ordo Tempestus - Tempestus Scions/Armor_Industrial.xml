	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="ODZ_40k_IM_TempestusScion_Fatigues"]/statBases</xpath>
		<value>
			<Bulk>4</Bulk>
			<WornBulk>2</WornBulk>
		</value>
