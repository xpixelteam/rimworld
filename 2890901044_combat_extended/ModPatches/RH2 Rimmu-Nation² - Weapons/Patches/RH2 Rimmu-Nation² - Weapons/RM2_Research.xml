<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- ==================== Weapons research prerequisite patches ==================== -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
		defName="RNGun_RPG7_RocketLauncher" or
		defName="RNGun_M79_GrenadeLauncher" or
		defName="RNGun_HK69A1_GrenadeLauncher"
		]/recipeMaker/researchPrerequisite</xpath>
		<value>
			<researchPrerequisite>CE_Launchers</researchPrerequisite>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RNGun_M72LAW_RocketLauncher"]/recipeMaker/skillRequirements</xpath>
		<value>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RNGun_M72LAW_RocketLauncher"]/recipeMaker/researchPrerequisite</xpath>
		<value>
			<researchPrerequisite>CE_Launchers</researchPrerequisite>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RNGun_M72LAW_RocketLauncher"]/costList</xpath>
		<value>
			<costList>
				<Steel>50</Steel>
				<ComponentIndustrial>3</ComponentIndustrial>
				<FSX>3</FSX>
			</costList>
		</value>
	</Operation>
</Patch>