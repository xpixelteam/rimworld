	<!--COILGUN WEAPONS-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded - Coilguns</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
			<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="VWE_Gun_GaussRifle"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalshTwo</def>
							<drawSize>(4,1)</drawSize>
							<offsets>
								<li>(0.6,0.08)</li>
							</offsets>
						</li>
					</value>
				</li>
				
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="VWE_Gun_GaussMagnum"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(3,1)</drawSize>
							<offsets>
								<li>(0.5,0.1)</li>
							</offsets>
						</li>
					</value>
				</li>
				
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="VWE_Gun_GaussLance"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalshTwo</def>
							<drawSize>(5,1)</drawSize>
							<offsets>
								<li>(0.8,-0.1)</li>
							</offsets>
						</li>
					</value>
				</li>
				
		    </operations>
		</match>
	</Operation>
</Patch>