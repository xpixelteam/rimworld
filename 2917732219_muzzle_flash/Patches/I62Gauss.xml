<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Testing only-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>S.T.A.L.K.E.R. - Custom Gauss Rifle</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="HRK_STALKER_Gauss"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(1.6,0.8)</drawSize>
							<offsets>
								<li>(0.64,0)</li>
							</offsets>
						</li>
					</value>
				</li>

				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="HRK_STALKER_Gauss_Sniper"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(2.4,1)</drawSize>
							<offsets>
								<li>(0.70,0)</li>
							</offsets>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>