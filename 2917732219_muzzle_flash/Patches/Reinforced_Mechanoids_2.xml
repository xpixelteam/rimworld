<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Reinforced Mechanoid 2</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
			
			<!--RM2 PLASMA TYPE WEAPONS-->				
			<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="RM_Gun_PlasmaHellgator"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(8,8)</drawSize>
							<offsets>
								<li>(0.5,0)</li>
							</offsets>
						</li>
					</value>
				</li>
				
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="RM_Gun_PlasmaImmolator"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(4,4)</drawSize>
							<offsets>
								<li>(0.5,0)</li>
							</offsets>
						</li>
					</value>
				</li>
				
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="RM_Gun_InfernoRifle"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalshTwo</def>
							<drawSize>(3,2)</drawSize>
							<offsets>
								<li>(0.5,0)</li>
							</offsets>
						</li>
					</value>
				</li>
				
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="RM_Gun_InfernoLauncher"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalshTwo</def>
							<drawSize>(3,2)</drawSize>
							<offsets>
								<li>(0.5,0.1)</li>
								<li>(0.5,-0.1)</li>
							</offsets>
							<isAlternately>true</isAlternately>
						</li>
					</value>
				</li>
				
				
				<!--RM2 CHARGED TYPE WEAPONS-->
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="RM_Gun_ChargeLancePistol"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(1.5,1.5)</drawSize>
							<offsets>
								<li>(0.5,0.1)</li>
							</offsets>
						</li>
					</value>
				</li>
				
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="RM_Gun_ChargeLanceRifle"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(3,1.5)</drawSize>
							<offsets>
								<li>(0.5,0)</li>
							</offsets>
						</li>
					</value>
				</li>
				
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="RM_Gun_ChargePistol"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(1.5,1.5)</drawSize>
							<offsets>
