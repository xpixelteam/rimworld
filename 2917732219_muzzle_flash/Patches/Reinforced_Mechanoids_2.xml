							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(4,2)</drawSize>
							<offsets>
								<li>(0.6,0)</li>
							</offsets>
						</li>
					</value>
				</li>
					
					
				<!--RM2 ANCIENT TURRETS-->
                <li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="RM_Gun_AncientImmolatorTurret"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalshTwo</def>
							<drawSize>(5,3)</drawSize>
							<offsets>
								<li>(1,0)</li>
