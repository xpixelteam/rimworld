<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <!--VFEP WARCASKET FOLDING GUN-->
	<Operation Class="PatchOperationFindMod" MayRequire="Vanilla Factions Expanded - Pirates">
		<mods>
			<li>Vanilla Factions Expanded - Pirates</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
			<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="VFEP_WarcasketGun_FoldingGun"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalshThree</def>
							<drawSize>(4,3)</drawSize>
							<offsets>
								<li>(0.9,0)</li>
							</offsets>
						</li>
					</value>
				</li>
						
		    </operations>
		</match>
	</Operation>
	
	
	<!--QUICKDRAW WEAPONS-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded - Quickdraw</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
			<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="VWE_Gun_AutomaticPistol"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(1,1)</drawSize>
							<offsets>
								<li>(0.15,0.1)</li>
							</offsets>
						</li>
					</value>
				</li>
				
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="VWE_Gun_BullpupRifle"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(2,1)</drawSize>
							<offsets>
								<li>(0.5,0)</li>
							</offsets>
						</li>
					</value>
				</li>
				
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="VWE_Gun_BullpupDMR"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(2,1)</drawSize>
							<offsets>
								<li>(0.68,0.05)</li>
							</offsets>
						</li>
					</value>
				</li>
				
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="VWE_Gun_PDW"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalshTwo</def>
							<drawSize>(1,1)</drawSize>
							<offsets>
								<li>(0.4,0)</li>
							</offsets>
						</li>
					</value>
				</li>
					
		    </operations>
		</match>
	</Operation>
</Patch>