<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Vanilla Weapons Expanded - Bioferrite -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded - Bioferrite</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

	<li Class="SafePatcher.PatchOperationSetModExtension" MayRequire="IssacZhuang.MuzzleFlash">
		<xpath>Defs/ThingDef[defName="VWEB_Gun_FlarestrikeRifle"]</xpath>
		<value>
			<li Class="MuzzleFlash.MuzzleFlashProps">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(1.5,1)</drawSize>
				<offsets>
					<li>(0.4,0)</li>
				</offsets>
			</li>
		</value>
	</li>

	<li Class="SafePatcher.PatchOperationSetModExtension" MayRequire="IssacZhuang.MuzzleFlash">
		<xpath>Defs/ThingDef[defName="VWEB_Gun_FirestormShotgun"]</xpath>
		<value>
			<li Class="MuzzleFlash.MuzzleFlashProps">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(1,1.5)</drawSize>
				<offsets>
					<li>(0.4,0)</li>
				</offsets>
			</li>
		</value>
	</li>

	<li Class="SafePatcher.PatchOperationSetModExtension" MayRequire="IssacZhuang.MuzzleFlash">
		<xpath>Defs/ThingDef[defName="VWEB_Gun_CycloneMinigun"]</xpath>
		<value>
			<li Class="MuzzleFlash.MuzzleFlashProps">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(1,1)</drawSize>
				<offsets>
					<li>(0.43,-0.05)</li>
				</offsets>
			</li>
		</value>
	</li>

	<li Class="SafePatcher.PatchOperationSetModExtension" MayRequire="IssacZhuang.MuzzleFlash">
		<xpath>Defs/ThingDef[defName="VWEB_Gun_PiercerRifle"]</xpath>
		<value>
			<li Class="MuzzleFlash.MuzzleFlashProps">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(1,1)</drawSize>
				<offsets>
					<li>(0.4,0)</li>
				</offsets>
			</li>
		</value>
	</li>

			</operations>
		</match>
	</Operation>

</Patch>