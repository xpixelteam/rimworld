<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- clean/don't clean toggle for these buildings (in this case, which have "bills" tab) -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>Defs/ThingDef[inspectorTabs/li="ITab_Bills"]/comps</xpath>
			</li>
				
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[inspectorTabs/li="ITab_Bills"]/comps</xpath>
				<value><li><compClass>CommonSense.DoCleanComp</compClass></li></value>
			</li>
			<!--
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Brewery"]</xpath>
				<value><comps><li><compClass>CommonSense.DoCleanComp</compClass></li></comps></value>
			</li>
			-->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[inspectorTabs/li="ITab_Bills" and not(comps)]</xpath>
				<value><comps><li><compClass>CommonSense.DoCleanComp</compClass></li></comps></value>
			</li>
		</operations>
	</Operation>
</Patch>