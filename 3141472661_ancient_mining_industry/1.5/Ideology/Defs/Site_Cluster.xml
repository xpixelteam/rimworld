  <SitePartDef>
    <defName>AncientShieldMiningSite_Site</defName>
    <label>Ancient Shield Mining Site</label>
    <description>A mine whose entrance had collapsed.</description>
    <siteTexture>Icon/AncientShieldMiningSite</siteTexture>
    <expandingIconTexture>Icon/AncientShieldMiningSite</expandingIconTexture>
    <handlesWorldObjectTimeoutInspectString>true</handlesWorldObjectTimeoutInspectString>
